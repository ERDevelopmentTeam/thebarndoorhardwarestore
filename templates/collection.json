{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        "h1 {text-transform: uppercase !important;}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "scheme-5"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        ".card__heading {margin-top: 0; margin-bottom: 0; font-size: 20px; }",
        "amp-img {display: inline-block;}"
      ],
      "settings": {
        "products_per_page": 20,
        "columns_desktop": 3,
        "color_scheme": "scheme-1",
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "quick_add": "none",
        "enable_filtering": false,
        "filter_type": "vertical",
        "enable_sorting": false,
        "columns_mobile": "2",
        "padding_top": 12,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
